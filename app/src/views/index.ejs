                    <a href="/products/detail/<%- id  %>"><img src="/images/products/<%=image ? image : 'default-image.png'%>" alt="" class="product__img"></a>
                    <div class="show-more"><a href="/products/detail/<%- id  %>">Ver Más</a></div>
                    <div class="product__description">
                        <h3 class="product__title"><%= name %></h3>
                        <span class="product__price">$<%= price %></span>
                    </div>
                        <i class="product__icon fa-sharp fa-solid fa-cart-plus"></i>
                </div>
            </section>
        <% }) %>
    </main>
